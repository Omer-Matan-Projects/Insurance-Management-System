<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.insurance.ui_controller.PolicyManagementController"
      alignment="TOP_CENTER"
      spacing="25">

    <Separator/>

    <Label text="Policy Management" styleClass="section-label"/>

    <TableView fx:id="policyTable" prefHeight="400">

        <columns>
            <TableColumn fx:id="idColumn"
                         text="Policy ID"/>

            <TableColumn fx:id="firstNameColumn"
                         text="First Name"/>

            <TableColumn fx:id="lastNameColumn"
                         text="Last Name"/>

            <TableColumn fx:id="typeColumn"
                         text="Insurance Type"/>

            <TableColumn fx:id="dateColumn"
                         text="Start Date"/>

            <TableColumn fx:id="actionsColumn"
                         text="Actions"/>
        </columns>

    </TableView>

    <Button text="Back"
            onAction="#onBackClicked"
            styleClass="secondary-button"/>

</VBox>